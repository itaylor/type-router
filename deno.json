{
  "name": "@itaylor/type-router",
  "version": "1.0.0",
  "description": "A lightweight, type-safe router for single-page applications with first-class TypeScript support",
  "exports": "./type-router.ts",
  "publish": {
    "include": ["type-router.ts", "README.md", "LICENSE"]
  },
  "tasks": {
    "test": "deno test",
    "lint": "deno lint",
    "fmt": "deno fmt",
    "check": "deno task lint && deno task fmt --check && deno task test",
    "build:npm": "deno run -A scripts/build_npm.ts"
  },
  "lint": {
    "rules": {
      "exclude": ["no-explicit-any"]
    }
  },
  "fmt": {
    "lineWidth": 80,
    "indentWidth": 2,
    "semiColons": true,
    "singleQuote": false
  },
  "compilerOptions": {
    "lib": ["dom", "es2022"]
  }
}
